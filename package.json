{
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS='--loader=ts-node/esm' ava --verbose --timeout=30s",
    "tiles": "rm -rf AoCTiles/.aoc_tiles_cache && python3 AoCTiles/create_aoc_tiles.py",
    "check": "tsc && biome check --write --unsafe **/*.ts",
    "exec": "tsx",
    "coverage": "type-coverage --detail --strict --ignore-files=test.ts"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@datastructures-js/priority-queue": "^6.3.1",
    "circularray": "^0.2.2",
    "z3-solver": "^4.13.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@swc/core": "^1.7.2",
    "ava": "^6.1.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "type-coverage": "^2.29.1",
    "typescript": "^5.5.4"
  },
  "ava": {
    "files": ["./**/*test.ts"],
    "nodeArguments": [
      "--experimental-specifier-resolution=node",
      "--no-warnings"
    ],
    "extensions": {
      "ts": "module"
    }
  }
}
